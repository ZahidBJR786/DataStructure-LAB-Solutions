#include <iostream>
using namespace std;

int GenerateCode(int n)
	{
		int Factorial = 1;
		for(int i=n; i>0; i--)
		{
			Factorial *= n;
			n--; 
		}
		return Factorial;
	}
int(*ptrCode)(int n) = &GenerateCode;

int main(int argc, char** argv) {
	
	int a;
	cout << "Enter Number for to find Factorial: ";
	cin >> a;
	int z = ptrCode(a);
	
	cout << "The Factorial is: " << z;
	
	return 0;
}
