int main(int argc, char** argv) {
	int QE = 0;
	int *ptrQE = &QE;
	
	int QL = 0;
	int *ptrQL = &QL;
	
	int QC = 0;
	int *ptrQC = &QC;
	
	
	int Esspresso = 250;
	int *ptrE = &Esspresso;
	
	int Latte = 170;
	int *ptrL = &Latte;
	
	int Cappuccino = 200;
	int *ptrC = &Cappuccino;
	
	cout << "====IMSciences Cafeteria====" << endl;
	cout << "=========Price List=========" << endl;
	cout << "Esspresso = 250" << endl;
	cout << "Latte = 170" << endl;
	cout << "Cappuccino = 200" << endl << endl;
	
	cout << "Enter the Quantity of Esspresso: ";
	cin >> *ptrQE;
	
	cout << "Enter the Quantity of Latte: ";
	cin >> *ptrQL;
	
	cout << "Enter the Quantity of Cappuccinp: ";
	cin >> *ptrQC;
	
	int Total = 0;
	Total = (*ptrE * *ptrQE) + (*ptrL * *ptrQL) + (*ptrL * *ptrQL);
	
	cout << "Total Bill Is: " << Total;
	
