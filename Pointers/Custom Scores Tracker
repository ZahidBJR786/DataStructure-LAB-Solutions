#include <iostream>
using namespace std;


int main(int argc, char** argv) {
	
	cout << "===Welcome! Custom-Score-Tracker===" << endl;
	
	int NumPlayers;
	
	cout << "Enter the number of Players: ";
	cin >> NumPlayers;
	
	int *ptrScore = (int*)malloc(NumPlayers * sizeof(int));
	
	if(ptrScore == NULL)
	{
		cout << "Space Allocation Failed!" << endl;
	}
	
	for(int i=0; i<NumPlayers; i++)
	{
		cout << "Enter the score of player " << i + 1 << ": " ;
		cin >> ptrScore[i];
	}
	
	cout << "===TOURNAMENT SCORES===" << endl;
	for(int i=0; i<NumPlayers; i++)
	{
		cout << "The Player " << i + 1 << " Score: " << ptrScore[i] << endl;
	}
	
	free(ptrScore);
	
	return 0;
}
